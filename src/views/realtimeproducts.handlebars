<div>
    <h1>Agregar Producto</h1>
    <form action="/realtimeproducts" method="post">
        <label>Titulo</label>
        <input type="text" id="title"><br>
        <label>Descripcion</label>
        <input type="text" id="description"><br>
        <label>Codigo</label>
        <input type="number" id="code"><br>
        <label>Precio</label>
        <input type="number" id="price"><br>
        <label>Cantidad de Stock</label>
        <input type="number" id="stock"><br>
        <label>categoria</label>
        <input type="text" id="category"><br>
        <label>Imagen</label>
        <input type="text" id="thumbnail"><br>
        <input type="submit" id="enviar" value="crear">
    </form>
</div>

<div>

<h1>Listado de Productos</h1>
    {{#each products}}
        <p>id: {{this.id}}</p>
        <p>title: {{this.title}}</p>
        <p>description: {{this.description}}</p>
        <p>code: {{this.code}}</p>
        <p>price: {{this.price}}</p>
        <p>status: {{this.status}}</p>
        <p>stock: {{this.stock}}</p>
        <p>category: {{this.category}}</p>
        <p>thumbnail: {{this.thumbnail}}</p><br>
        <p>-------------------------------------</p>
    {{/each}}

</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realtimeproduct.js"></script>